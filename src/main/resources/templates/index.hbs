{{#partial "content"}}
    <!--Table-->
    {{#if heroes}}
    <table class="table table-striped w-auto">
        <!--Table head-->
        <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Details</th>
        </tr>
        </thead>
        <!--Table head-->

        <!--Table body-->
        <tbody>
            {{#each heroes}}
                <tr class="table-info">
                    <th scope="row">{{id}}</th>
                    <td>{{name}}</td>
                    <td>View Details</td>
                </tr>
            {{/each}}
        </tbody>
        <!--Table body-->
    </table>
    <!--Table-->
    {{else}}
        <p>No heroes currently! </p>
    {{/if}}
{{/partial}}

{{> layout.hbs}}