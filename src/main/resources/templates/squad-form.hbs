{{#partial "content"}}
    {{#if updateSquad}}
        <h1>Update this Squad!</h1>
        <form action="/squads/{{squad.id}}" method="post">
            <label for="name">Update this Squad's name</label>
            <input id="newSquadName" name="newSquadName" type="text" value="{{squad.name}}">
            <button type="submit" class="btn btn-default">Update!</button>
        </form>
    {{else}}

        <h1>Add a new Squad</h1>
        <form action="/squads" method="post">
            <label for="name">Squad name</label>
            <input id="name" name="name" type="text">
            <button type="submit" class="btn brn-default">Add</button>
        </form>
    {{/if}}
{{/partial}}

{{>layout.hbs}}