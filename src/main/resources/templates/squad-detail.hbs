{{#partial "content"}}
    <!--Table-->
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <button class="btn blue-gradient"><h1>{{squad.name}}</h1></button>
                    {{#if heroes}}
                        <table id="indexTable" class="table table-striped w-auto">
                        <!--Table head-->
                        <thead class="aqua-gradient">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Age</th>
                                <th>Power</th>
                                <th>Weakness</th>
                                <th>Squad</th>
                            </tr>
                        </thead>
                    <!--Table head-->
                            {{#each heroes}}
                    <!--Table body-->
                            <tbody>
                            <tr class="table-info">
                                <th scope="row">{{id}}</th>
                                <td>{{name}}</td>
                                <td>{{age}}</td>
                                <td>{{power}}</td>
                                <td>{{weakness}}</td>
                                <td>{{squad.name}}</td>
                            </tr>
                            </tbody>
                    <!--Table body-->
                        {{/each}}
                    {{else}}
                        <p>There are no heroes in this squad! </p>
                    {{/if}}
                </table>
                <!--Table-->
                <a href="/heroes/{{hero.id}}/update">
                    <button class="btn peach-gradient btn-rounded-sm waves-effect">Edit this post</button>
                </a>
                <br>
                <a href="/heroes/{{hero.id}}/delete">
                    <button class="btn peach-gradient btn-rounded-sm waves-effect">DELETE this hero's record! (No undo)</button>
                </a>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>

<!--    <p>Here are all the heroes listed in this squad:</p>-->
    <a href="/squads/{{squad.id}}/update">Update this squad</a><br>
    <a href="/squads/{{squad.id}}/delete">DELETE this squad</a>
{{/partial}}

{{> layout.hbs}}